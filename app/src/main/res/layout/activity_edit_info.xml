        <TextView
            android:text="TextView"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/fengexian3"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:text="生日"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/birth"
                android:layout_centerVertical="true"
                android:layout_marginLeft="28dp" />
            <TextView
                android:text="xxxx"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp" />

            <Button
                android:id="@+id/datepicker"
                android:text="选择日期"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/fengexian4"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:text="所在地"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:id="@+id/area"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:text="北京"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:layout_marginStart="54dp"
                android:id="@+id/info_locate"
                android:layout_alignBaseline="@+id/area"
                android:layout_alignBottom="@+id/area"
                android:layout_toRightOf="@+id/area"
                android:layout_toEndOf="@+id/area" />

        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/fengexian6"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:text="爱好"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:id="@+id/hobby"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:text="玩游戏、看电影"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/hobby"
                android:layout_toEndOf="@+id/hobby"
                android:layout_marginLeft="73dp"
                android:layout_marginStart="73dp"
                android:id="@+id/info_hobby"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <TextView
            android:text="TextView"
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/textView15"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <TextView
                android:text="个人说明"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:id="@+id/shuoming"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:text="不要石乐志"
                android:textSize="22dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statement"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/shuoming"
                android:layout_toEndOf="@+id/shuoming"
                android:layout_marginLeft="34dp"
                android:layout_marginStart="34dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>