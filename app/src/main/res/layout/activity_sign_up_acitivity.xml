<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <!--android:src="@drawable/phone"/>-->
        <EditText
            android:id="@+id/userName_signUp_activity"
            android:textColorHint="#bab7b7"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <!--android:src="@drawable/lock"/>-->
        <EditText
            android:id="@+id/passWord_signUp_activity_1"
            android:textColorHint="#bab7b7"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <!--android:src="@drawable/lock"/>-->
        <EditText
            android:id="@+id/passWord_signUp_activity_2"
            android:textColorHint="#bab7b7"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/verifiedCode_lin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"></ImageView>
        <!--android:src="@drawable/lock"/>-->
        <EditText
            android:id="@+id/verifiedCode"
            android:textColorHint="#bab7b7"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入收到的验证码"/>

    </LinearLayout>

    <TextView
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="发送验证码"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:id="@+id/sendVerfiedCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="注册"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>